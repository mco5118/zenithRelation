<!DOCTYPE html>

<html ng-app="cookingApp" lang="en">
  <head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="A simple knowledge management system">
    <meta name="author" content="morris.trey.j@gmail.com">

    <title>Zenith</title>

    <!-- Icon for Apple devices -->
    <link rel="apple-touch-icon" href="/logo2.png"/>

    <!-- Set to false to load load CSS & JS from localhost -->
    <% var isConnected = true; %>

    <!-- Bootstrap core CSS -->
    <% if(isConnected) { %>
     <link href="//netdna.bootstrapcdn.com/bootstrap/3.0.0/css/bootstrap.min.css" rel="stylesheet">
      <link href="//netdna.bootstrapcdn.com/bootstrap/3.0.0-rc2/css/bootstrap-glyphicons.css" rel="stylesheet">
      <link href="/css/app.css" rel="stylesheet">
    <% } else { %>
      <link href="/css/bootstrap.min.css" rel="stylesheet">
      <link href="/css/bootstrap-glyphicons.css" rel="stylesheet">
      <link href="/css/app.css" rel="stylesheet">
    <% } %>

    <style>
    /* 
     * css/jumbotron.css
     * Move down content because we have a fixed navbar that is 50px tall 
     */
    body {
      padding-top: 50px;
      padding-bottom: 20px;
    }
    </style>
  </head>

  <body>

    <div class="navbar navbar-inverse navbar-fixed-top">
      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <div class="media">
          <a class="pull-left" href="/#/">
          	<img class="media-object" src="/logo2.png">
          </a>
          <div style="color:#FFFFFF" class="media-body">
          <h4 >Zenith</h4>
          </div> 
          </div>
        </div>
        <div class="navbar-collapse collapse">
<!--           <ul class="nav navbar-nav"> -->
<!--             <li><a ng-href="/#/recipes">Home</a></li> -->
<!--             <li><a ng-href="/#/recipes/favorites">Events</a></li> -->
<!-- <!--             <li><a ng-href="/#/recipes/shopping">New Article</a></li> --> 
<!-- <!--             <li><a ng-href="/#/recipes/search">Search</a></li> --> 
<!--           </ul> -->
        </div>
      </div>
    </div>

    <div class="container">
      <% if(typeof(error) === 'undefined') { %>
        <div ng-view>(content goes here)</div>
      <% } else { %>
        <div>ERROR: <%= error %></div>
      <% } %>
      <hr>
    </div> <!-- /container -->

    <div class="container">
      <footer>
<!--         <p>&copy; 2012-<%= (new Date()).getFullYear() %> H&amp;K, all rights reserved. <a ng-href="/#/credits">Credits</a> -->
<!--         </p> -->
      </footer>
    </div>

    <!-- Bootstrap core JavaScript -->
    <% if(isConnected) { %> 
      <script src="//ajax.googleapis.com/ajax/libs/jquery/1.10.2/jquery.min.js"></script>
      <script src="//netdna.bootstrapcdn.com/bootstrap/3.0.0/js/bootstrap.min.js"></script>
      <script src="//ajax.googleapis.com/ajax/libs/angularjs/1.0.7/angular.min.js"></script>    
      <script src="//ajax.googleapis.com/ajax/libs/angularjs/1.0.7/angular-resource.min.js"></script>    
    <% } else { %>
      <script src="/js/jquery.min.js"></script>
      <script src="/js/bootstrap.min.js"></script>
      <script src="/js/angular.min.js"></script>
      <script src="/js/angular-resource.min.js"></script>

    <% } %>
    <script src="/js/app.js"></script>
  
    <!-- Close the menu when clicking on any of the menu options -->
    <script type="text/javascript">
      $('.nav li a').on('click',function(){
        $('.navbar-collapse').collapse('hide');
      });
    </script>
  </body>
</html>



